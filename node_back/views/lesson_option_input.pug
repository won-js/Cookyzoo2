doctype html
html(lang='ko')
	head
		title 클래스 옵션
		style.
			table {
				width: 100%;
				border-top: 1px solid #444444;
				border-collapse: collapse;
			}
			th, td {
				border-bottom: 1px solid #444444;
				padding: 10px;
			}

	body
		#header 
			h1.title 클래스 옵션 추가하기

	form(
		action="/lesson-option/"
		method="POST"
	)
		table 
			tr 
				td 
					input(
						type="text" name="name" placeholder="이름"
					)
			tr 
				td 
					input(
						type="text" name="price" placeholder="가격"
					)
			tr 
				td 
					input(
						type="text" name="description" placeholder="설명"
					)
			tr 
				td 
					input(
						type="text" name="thumbnail" placeholder="썸네일"
					)
			tr 
				td 
					input(
						type="number" name="lesson_id" placeholder="lesson_id"
					)
		br
		input(
			type="submit"
			value="전송하기"
		)

	br
	br

	table
		tr
			td id
			td name
			td price 
			td description
			td thumbnail
			td lesson_id
		for lessonOption in lessonOptions
			tr
				td= lessonOption.dataValues.id
				td= lessonOption.dataValues.name 
				td= lessonOption.dataValues.price 
				td= lessonOption.dataValues.description 
				td= lessonOption.dataValues.thumbnail 
				td= lessonOption.dataValues.lesson_id 
